<% layout('/layouts/boilerplate') -%>
<body>
       

        <div >
            <div class="camp-Registration">
              
                <form action="/bloodCampRegistration" method="post" class="col-6 offset-3 camp-form">
                    <h1>Blood Camp Registration Form</h1>
                <div>
                    <label for="name">Enter Camp Name</label>
                    <input type="text" placeholder="Enter camp name" id="name" name="name" required class="form-control">
                </div>
                <br>
                <div>
                    <label for="address">Enter Address</label>
                    <input type="text" placeholder="Enter address" id="address" name="address" required class="form-control">
                </div>
                <br>
                <div>
                    <label for="state">Enter city</label>
                    <input type="text" placeholder="Enter state" name="city" required class="form-control">
                </div>
                 <br>
                <div>
                    <label for="district">Enter District</label>
                    <input type="text" placeholder="Enter district" name="district" required class="form-control">
                </div>
                <br>

                <div>
                    <label for="contact">Enter contact number</label>
                    <input type="text" placeholder="Enter contact number" name="contact" required class="form-control">
                </div>
                  <br>
                  <div>
                    <label for="date">Enter camp date</label>
                    <input type="date" placeholder="Enter Camp Date" name="date" required class="form-control"> 
                  </div>
                  <br>
                <div>
                    <label for="conductedBy">Conducted By</label>
                    <input type="text" placeholder="Conducted By" name="conductedBy" required class="form-control">
                </div>
                 <br>
                <div>
                    <label for="organisedBy">Organised By</label>
                    <input type="text" placeholder="Organised By" name="organisedBy" required class="form-control">
                </div>
                <br>
               
                <button class="btn btn-dark">submit</button>
            </form>
            </div>
        </div>
  
</body>